# Server
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI_LOCAL=mongodb://localhost:27017/ridepack
MONGODB_URI=

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Rate limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Twilio SMS (leave empty to use mock SMS in logs)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
